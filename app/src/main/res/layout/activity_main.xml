<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:padding="16dp"
    app:parallaxOffsetIncrement="5dp"
    app:parallaxScaleHorizontal="0.7"
    app:parallaxScaleVertical="0.9">

    <cn.shield.checkin.view.parallax.ParallaxLayerLayout
        android:id="@+id/parallax1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:parallaxOffsetIncrement="5dp"
        app:parallaxScaleHorizontal="0.9"
        app:parallaxScaleVertical="0.5">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="账号"/>
        </android.support.design.widget.TextInputLayout>

    </cn.shield.checkin.view.parallax.ParallaxLayerLayout>

    <cn.shield.checkin.view.parallax.ParallaxLayerLayout
        android:id="@+id/parallax2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:parallaxOffsetIncrement="5dp"
        app:parallaxScaleHorizontal="0.7"
        app:parallaxScaleVertical="0.9">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/et_psw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>
    </cn.shield.checkin.view.parallax.ParallaxLayerLayout>

    <cn.shield.checkin.view.parallax.ParallaxLayerLayout
        android:id="@+id/parallax3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:parallaxOffsetIncrement="10dp"
        app:parallaxScaleHorizontal="0.9"
        app:parallaxScaleVertical="0.6">

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="login"
            android:text="登录"/>
    </cn.shield.checkin.view.parallax.ParallaxLayerLayout>

    <cn.shield.checkin.view.parallax.ParallaxLayerLayout
        android:id="@+id/parallax4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:parallaxOffsetIncrement="10dp"
        app:parallaxScaleHorizontal="0.9"
        app:parallaxScaleVertical="0.6">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"/>
    </cn.shield.checkin.view.parallax.ParallaxLayerLayout>
</LinearLayout>